<form method="POST" class="mt-5" action="<%=path%>" enctype='multipart/form-data'>
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text" value="<%= book ? book.title:'' %>" name="title" class="form-control" id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputdescription">Описание</label>
        <textarea rows="3" name="description" class="form-control"
            id="inputdescription"><%= book ? book.description:'' %></textarea>
    </div>

    <div class="form-group">
        <label for="inputauthors">Автор</label>
        <input type="text" rows="3" name="authors" class="form-control" id="inputauthors" value="<%= book ? book.authors:'' %>"/>
    </div>

    <div class="form-group">
        <label for="inputfavorite">Фаворит</label>
        <input type="text" rows="3" name="favorite" class="form-control" id="inputfavorite" value="<%= book ? book.favorite:'' %>"/>
    </div>

    <div class="form-group">
        <label for="inputfileCover">Ссылка на обложку</label>
        <input type="text" rows="3" name="fileCover" class="form-control"
            id="inputfileCover" value="<%= book ? book.fileCover:'' %>"/>
    </div>

    <div class="form-group">
        <label for="inputfileName">Имя файла</label>
        <input type="text" rows="3" name="fileName" class="form-control" id="inputfileName" value="<%= book ? book.fileName:'' %>"/>
    </div>

    <div class="mb-3">
        <label for="fileBook" class="form-label">Выберите файл с книгой</label>
        <input class="form-control" type="file" id="fileBook" name="fileBook">
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>